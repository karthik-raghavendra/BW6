<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.myapp</groupId>
  <artifactId>tibco_exec</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>

<build>
  <plugins>
    <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>exec-maven-plugin</artifactId>
      <version>1.2.1</version>
      <configuration>
          <executable>buildear.exe</executable>
          <arguments>
              <argument>-ear</argument>
              <argument>/Archive/QueryBookService.archive</argument>
              <argument>-x</argument>
              <argument>-s</argument>
              <argument>--propFile</argument>
              <argument>C:/tibco/classic/tra/5.9/bin/buildear.tra</argument>
              <argument>-a</argument>
              <argument>D:\projects\ngad\tibco\exercises\dtl.xml</argument>
              <argument>-o</argument>
              <argument>D:\projects\ngad\tibco\exercises\EAR\QueryBookService.ear</argument>
              <argument>-v</argument>
              <argument>-p</argument>
              <argument>D:\projects\ngad\tibco\exercises\QueryBookService</argument>
          </arguments>
          <workingDirectory>C:/tibco/classic/tra/5.9/bin</workingDirectory>
      </configuration>
      <executions>
          <execution>
            <id>build</id>
            <phase>compile</phase>
             <goals>
               <goal>exec</goal>
             </goals>
          </execution>
      </executions>
    </plugin>
    <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>exec-maven-plugin</artifactId>
      <version>1.2.1</version>
      <configuration>
          <executable>AppManage.exe</executable>
          <arguments>
              <argument>-deploy</argument>
              <argument>-app</argument>
              <argument>/Examples/QueryBookService</argument>
              <argument>-domain</argument>
              <argument>TIBCO_DEV</argument>
              <argument>-user</argument>
              <argument>admin</argument>
              <argument>-pw</argument>
              <argument>admin</argument>
              <argument>-deployconfig</argument>
              <argument>D:\projects\ngad\tibco\exercises\EAR\QueryBookService.xml</argument>
              <argument>-ear</argument>
              <argument>D:\projects\ngad\tibco\exercises\EAR\QueryBookService.ear</argument>
          </arguments>
          <workingDirectory>C:/tibco/classic/tra/5.9/bin</workingDirectory>
      </configuration>
      <executions>
          <execution>
            <id>deployStart</id>
            <phase>verify</phase>
             <goals>
               <goal>exec</goal>
             </goals>
          </execution>
      </executions>
    </plugin>
  </plugins>
</build>
</project>