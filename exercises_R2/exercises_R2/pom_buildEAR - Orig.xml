<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.codehaus.mojo</groupId>
  <artifactId>buildEAR</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>

<build>
  <plugins>
    <plugin>
      <groupId>org.codehaus.mojo</groupId>
      <artifactId>exec-maven-plugin</artifactId>
      <version>1.2.1</version>
      <executions>
          <execution>
            <id>build</id>
            <phase>compile</phase>
             <goals>
               <goal>exec</goal>
             </goals>
          </execution>
      </executions>
      <configuration>
          <executable>${buildEAR}</executable>
          <arguments>
              <argument>-ear</argument>
              <argument>${tibco.BusinessWorksArchive}</argument>
              <argument>-x</argument>
              <argument>-s</argument>
              <argument>--propFile</argument>
              <argument>${tibco.tra.home}${file.separator}bin${file.separator}buildear.tra</argument>
              <argument>-a</argument>
              <argument>${dtl}</argument>
              <argument>-o</argument>
              <argument>${tibco.deploy.ArchiveFileName}</argument>
              <argument>-v</argument>
              <argument>-p</argument>
              <argument>${tibco.BusinessWorksProject}</argument>
          </arguments>
          <workingDirectory></workingDirectory>
      </configuration>
    </plugin>
  </plugins>
</build>
</project>